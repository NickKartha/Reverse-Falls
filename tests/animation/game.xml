<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
. ws :
    . settings :
        . stage width 1366px, height 768px, +create, +center, +resize
    --
    . assets :
        
        . imagepack ~cecile, x 0, y 0, z 1000 :
            . image ~smile, src ../../story/assets/images/cecile/smile.png
        --
        
        . background ~bg, src ../../story/assets/images/Rainbow_A_01.jpg, width 100%, height 100%
        
        . textbox ~tb, cssid tb
        
        . character ~n, textbox tb
            
        . animation ~my_anim :
            . group :
                . do @cecile, action move, x 0, y -500, :2000, easing linear
            --
            . group :
                . do @cecile, action move, x 0, y -0, :2000, easing linear
            --
        --
        
    --
    . scenes :
        
        . scene #start :
            
            . set @cecile, image smile
            
            . show @bg
            . show @tb
            . show @cecile, :0
            
            . start @my_anim
            
            . goto scene doNothingLoop
            
        --
        
        . scene #doNothingLoop :
            . wait :5000
            . goto scene doNothingLoop
        --
        
    --
--
